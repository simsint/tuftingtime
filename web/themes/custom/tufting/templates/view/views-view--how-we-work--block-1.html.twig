<section id="how-we-work" class="section section--steps">
	<div class="container container--lg">
		<div class="steps">
			<div class="steps__header">
				<div data-w-id="f3080947-c64d-b292-3cd2-0e07855ac5c1" class="subheading reasons__subheading">{{ how_we_work_intro.field_title.value}}</div>


				<h2 data-name="title-parent" class="heading heading--lg">
					<span data-name="title-item" class="heading-span" id="#animate7">{{ total_row_count }} {{ how_we_work_intro.field_sub_title.value}}</span>
				</h2>
			</div>
			<ul role="list" class="steps__list">
				{% if rows %}
					{{ rows }}
				{% endif %}


			</ul>
			<div class="steps__image-wrapper"><img src="images/img-3.webp" loading="lazy" alt="" class="steps__image"/></div>
		</div>
	</div>
</section>





